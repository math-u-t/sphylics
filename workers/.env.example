# bbauth Environment Variables Configuration
# Copy this file to .env and update with your actual values

# Base URLs
ISSUER_URL=https://bbauth.example.com
APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://example.com,https://app.example.com

# KV Namespace ID
# Get this by running: wrangler kv:namespace create "KV"
KV_NAMESPACE_ID=YOUR_KV_NAMESPACE_ID
KV_PREVIEW_ID=YOUR_PREVIEW_KV_NAMESPACE_ID

# JWT Keys (ES256)
# Generate using: npm run generate-keys
# These should be set as secrets using: wrangler secret put JWT_PRIVATE_KEY
JWT_PRIVATE_KEY_FILE=./keys/private-key.pem
JWT_PUBLIC_KEY_FILE=./keys/public-key.pem

# Admin Token
# Generate a secure random token for admin operations
# Set as secret using: wrangler secret put ADMIN_TOKEN
ADMIN_TOKEN=your-secure-admin-token-here

# Development Settings
# Set to 'development' for local testing, 'production' for deployment
NODE_ENV=development

# Production Environment Variables
# Override the above values for production by setting [env.production] in wrangler.toml
PRODUCTION_ISSUER_URL=https://bbauth.example.com
PRODUCTION_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_PRODUCTION_SCRIPT_ID/exec
PRODUCTION_ALLOWED_ORIGINS=https://example.com

# Development Environment Variables
# Override for local development
DEV_ISSUER_URL=https://bbauth-dev.example.workers.dev
DEV_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_DEV_SCRIPT_ID/exec
DEV_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000
