{
  "name": "bbauth-workers",
  "version": "1.0.0",
  "description": "bbauth - RFC 6749準拠 OAuth 2.0 Provider (Cloudflare Workers)",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "deploy:dev": "wrangler deploy --env dev",
